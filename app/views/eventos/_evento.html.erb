<div id="<%= dom_id evento %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Engajamento:</strong>
    <%= evento.engajamento_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Responsavel:</strong>
    <%= evento.responsavel_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= evento.nome %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Descricao:</strong>
    <%= evento.descricao %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Inicio:</strong>
    <%= evento.inicio %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Termino:</strong>
    <%= evento.termino %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Local:</strong>
    <%= evento.local %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= evento.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this evento", evento, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this evento', edit_evento_path(evento), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
