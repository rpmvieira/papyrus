<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Engajamentos</h1>
    <%#= link_to 'New pessoa', pessoas_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="engajamento" class="min-w-full mt-4">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full sm:px-6 lg:px-8">
        <table class="w-full">
          <thead class="bg-white border-b border-b bg-gray-300">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Nome</th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-center">Opções</th>
            </tr>
          </thead>
          <tbody>
            <%= render @engajamentos %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>