<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= @engajamento.nome %></h1><%#= link_to 'New pessoa', new_engajamento_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>







  
  <%= button_to 'efef', engajamento_eventos_path(@engajamento) %>
  <div id="engajamento" class="min-w-full">
    <div class="mb-4 border-b border-black-200 dark:border-gray-700">
      <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
        <li class="mr-2" role="presentation">
          <button class="inline-block p-4 rounded-t-lg border-b-2 text-blue-600 hover:text-blue-600 dark:text-blue-500 dark:hover:text-blue-500 border-blue-600 dark:border-blue-500" id="profile-tab" data-tabs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="true">Início</button>
        </li>




        <% if @engajamento.colaboracoes.present? %>
        <% if @engajamento.colaboracoes.deste_colaborador(current_usuario).count >= 2 %>
        <li class="mr-2" role="presentation">
          <button class="<%= classe_menu %>" id="minhas_colaboracoes-tab" data-tabs-target="#minhas_colaboracoes" type="button" role="tab" aria-controls="minhas_colaboracoes" aria-selected="false">Minhas Colaborações</button>
        </li>
        <% end %>
        <% end %>

        <% if @engajamento.coordenadoria?(current_usuario)%>
        
        <li class="mr-2" role="presentation">
          <%#= button_to engajamento_eventos_path(@engajamento), class:"border" do %>
          <button class="<%= classe_menu %>" id="eventos-tab" data-tabs-target="#eventos" type="button" role="tab" aria-controls="eventos" aria-selected="false">Eventos</button>
          <%# end -%>
        </li>
        <% end %>

        <!-- <li class="mr-2" role="presentation">
          <button class="<%= classe_menu %>" id="opcoes-tab" data-tabs-target="#opcoes" type="button" role="tab" aria-controls="opcoes" aria-selected="false">Opções</button>
        </li> -->
      </ul>
    </div>
    <!-- <div class="grid grid-cols-3 gap-4"> -->
      <div class="flex flex-col col-span-2">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full sm:px-6 lg:px-8">
            <div id="myTabContent">
              <div class="" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="" id="show_inicio">
                  <%= render partial: "engajamentos/partials/conteudo/show_inicio" %>
                </div>
              </div>

              <div class="hidden" id="eventos" role="tabpanel" aria-labelledby="eventos-tab">
                <div id="show_eventos-<%= @engajamento.id %>">
                  rrrrrrrrrrrrrrrrr<%#= render "eventos/partials/conteudo/engajamento_show_eventos" %>
                </div>  
              </div>
 

            </div>
          </div>
        </div>
      </div>
      <div class="w-full mx-auto">
        <div id="flow">




        </div>
      </div>
